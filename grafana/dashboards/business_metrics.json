{
  "uid": "qilin-business-metrics",
  "title": "Qilin Business Metrics",
  "description": "业务金指标：推荐命中率、收益率、信号质量",
  "tags": ["qilin", "business", "recommendations"],
  "schemaVersion": 38,
  "version": 1,
  "time": {"from": "now-7d", "to": "now"},
  "timezone": "browser",
  "refresh": "5m",
  
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "今日推荐命中率",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "qilin_recommendation_hit_rate{timeframe=\"1d\"}",
          "legendFormat": "Hit Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 0.6},
              {"color": "green", "value": 0.7}
            ]
          }
        }
      }
    },
    
    {
      "id": 2,
      "type": "stat",
      "title": "7日平均收益率",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "qilin_avg_return_percent{timeframe=\"7d\"}",
          "legendFormat": "Avg Return"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": -5},
              {"color": "yellow", "value": 0},
              {"color": "green", "value": 2}
            ]
          }
        }
      }
    },
    
    {
      "id": 3,
      "type": "stat",
      "title": "今日推荐数量",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum(qilin_daily_recommendations)",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "green", "value": 20}
            ]
          }
        }
      }
    },
    
    {
      "id": 4,
      "type": "stat",
      "title": "信号覆盖率",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "qilin_signal_coverage",
          "legendFormat": "Coverage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 0.05},
              {"color": "green", "value": 0.1}
            ]
          }
        }
      }
    },
    
    {
      "id": 5,
      "type": "timeseries",
      "title": "推荐命中率趋势",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "qilin_recommendation_hit_rate{timeframe=\"1d\"}",
          "legendFormat": "1-day"
        },
        {
          "expr": "qilin_recommendation_hit_rate{timeframe=\"7d\"}",
          "legendFormat": "7-day"
        },
        {
          "expr": "qilin_recommendation_hit_rate{timeframe=\"30d\"}",
          "legendFormat": "30-day"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        }
      }
    },
    
    {
      "id": 6,
      "type": "timeseries",
      "title": "平均收益率趋势",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "qilin_avg_return_percent{timeframe=\"1d\"}",
          "legendFormat": "1-day"
        },
        {
          "expr": "qilin_avg_return_percent{timeframe=\"7d\"}",
          "legendFormat": "7-day"
        },
        {
          "expr": "qilin_avg_return_percent{timeframe=\"30d\"}",
          "legendFormat": "30-day"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    
    {
      "id": 7,
      "type": "bargauge",
      "title": "按动作推荐数量",
      "gridPos": {"x": 0, "y": 12, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "qilin_daily_recommendations{action=\"buy\"}",
          "legendFormat": "Buy"
        },
        {
          "expr": "qilin_daily_recommendations{action=\"sell\"}",
          "legendFormat": "Sell"
        },
        {
          "expr": "qilin_daily_recommendations{action=\"hold\"}",
          "legendFormat": "Hold"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    
    {
      "id": 8,
      "type": "piechart",
      "title": "推荐质量分布",
      "gridPos": {"x": 8, "y": 12, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "sum(rate(qilin_recommendations_total{quality=\"high\"}[1h]))",
          "legendFormat": "High Quality"
        },
        {
          "expr": "sum(rate(qilin_recommendations_total{quality=\"medium\"}[1h]))",
          "legendFormat": "Medium Quality"
        },
        {
          "expr": "sum(rate(qilin_recommendations_total{quality=\"low\"}[1h]))",
          "legendFormat": "Low Quality"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    
    {
      "id": 9,
      "type": "heatmap",
      "title": "推荐收益分布",
      "gridPos": {"x": 16, "y": 12, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "rate(qilin_recommendation_return_percent_bucket[5m])",
          "legendFormat": "{{ le }}"
        }
      ],
      "options": {
        "calculate": true,
        "cellGap": 2,
        "color": {
          "scheme": "RdYlGn"
        }
      }
    },
    
    {
      "id": 10,
      "type": "table",
      "title": "推荐质量对比",
      "gridPos": {"x": 0, "y": 18, "w": 24, "h": 6},
      "targets": [
        {
          "expr": "sum(qilin_recommendations_total) by (quality)",
          "legendFormat": "{{ quality }}",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "indexByName": {},
            "renameByName": {
              "quality": "Quality",
              "Value": "Total Recommendations"
            }
          }
        }
      ]
    }
  ],
  
  "annotations": {
    "list": [
      {
        "name": "Deployments",
        "datasource": "Prometheus",
        "expr": "changes(kube_deployment_status_observed_generation{namespace=\"production\",deployment=~\"qilin.*\"}[5m]) > 0"
      }
    ]
  }
}
